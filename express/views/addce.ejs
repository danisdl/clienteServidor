<%include _header%>
<div class="row container">
    <div class="col-md-12">
        <form action="nuevo" method="POST">
            <div class="form-group">
                <label for="">Descripcion</label>
                <input type="text" class="form-control" name="description">
            </div>

            <div class="form-group">
                <label for="">Sabor</label>
                <input type="text" class="form-control" name="flavor">
            </div>

            <div class="form-group">
                <label for="">Precio</label>
                <input type="text" class="form-control" name="price">
            </div>

            <div class="form-group">
                <label for="">Foto</label>
                <input type="text" class="form-control" name="picture">
            </div>

            <% if(!(typeof(mensajeErrorce) == 'undefined')){%>
                <div class="alert alert-danger">
                    <%= mensajeErrorce %>
                </div>
           <% } %>

           <% if(!(typeof(mensajeExitoce) == 'undefined')){%>
            <div class="alert alert-success">
                <%= mensajeExitoce %>
            </div>
       <% } %>

       <button class="btn btn-primary"><i class="fas fa-user-plus"></i> Nuevo Cerebro</button>
        </form>
    </div>
</div>


<%include _footer%>