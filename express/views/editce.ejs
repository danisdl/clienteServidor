<%include _header%>
<div class="row container">
    <div class="col-md-12">
        <form action="/cerebros/editce/<%= cerebro.id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="">Descripcion</label>
                <input type="text" class="form-control" name="description" value="<%= cerebro.description %>">
            </div>

            <div class="form-group">
                <label for="">Sabor</label>
                <input type="text" class="form-control" name="flavor" value="<%= cerebro.flavor %>">
            </div>

            <div class="form-group">
                <label for="">Precio</label>
                <input type="text" class="form-control" name="price" value="<%= cerebro.price %>">
            </div>

            <div class="form-group">
                <label for="">Foto</label>
                <input type="text" class="form-control" name="picture" value="<%= cerebro.picture %>">
            </div>

            <% if(!(typeof(mensajeError) == 'undefined')){%>
                <div class="alert alert-danger">
                    <%= mensajeError %>
                </div>
           <% } %>

           <% if(!(typeof(mensajeExito) == 'undefined')){%>
            <div class="alert alert-success">
                <%= mensajeExito %>
            </div>
       <% } %>
            
            <button class="btn btn-primary"><i class="fas fa-user-plus"></i>Actualizar Cerebro</button>
        </form>
    </div>
</div>


<%include _footer%>